@model IEnumerable<ShopCaddy.Models.PurchaseOrder>

@{
    ViewData["Title"] = "Index";
}

<h1></h1>

<p>
    <a asp-action="Create" class="btn btn-danger" >Create New</a>
</p>

<h5>Outstanding Purchase Orders</h5>

<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Received)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vendor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    @if (item.Received == false)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td ><button class="received-Button btn btn-danger" id="@item.Id" >
             @Html.DisplayFor(modelItem => item.Received)
                </button>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendor.Contact)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-danger">Details</a>
            </td>
        </tr>}
}
    </tbody>
</table>


    <h5>Received Purchase Orders</h5>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateReceived)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vendor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Received == true)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateReceived)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vendor.Contact)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-danger">Details</a>
                </td>
            </tr>
            }
        }
    </tbody>
</table>
