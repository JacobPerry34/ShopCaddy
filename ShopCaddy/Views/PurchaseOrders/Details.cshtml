@model ShopCaddy.Controllers.PurchaseOrdersController.POPViewModel

@{
    ViewData["Title"] = "Details";
}

<h1></h1>

<div>
    <h4>@Html.DisplayFor(model => model.PurchaseOrder.Name)</h4>
</div>
<dl>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vendor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseOrder.Vendor.Contact)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseOrder.Vendor.PhoneNumber)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseOrder.Vendor.Email)
        </dd>
    </dl>

<table class=" table table-striped">
    <thead>
        <tr>
            <th class="col-sm-2">
                Image
            </th>
            <th class="col-sm-2">
                Product Name
            </th>
            <th class="col-sm-2">
                Quantity
            </th>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Price)
            </th>
            <th class="col-sm-2">
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (ShopCaddy.Controllers.PurchaseOrdersController.POPViewModel purchaseOrderProduct in Model.groupedProducts)
        {

            <tr>
                @*<th scope="row"></th>*@
                <td class="col-sm-8"><img src="@Html.DisplayFor(model => purchaseOrderProduct.Product.Image)" class="h-25 w-25" /></td>
                <td class="col-sm-8">@Html.DisplayFor(model => purchaseOrderProduct.Product.Name)</td>

                <td class="col-sm-8">@Html.DisplayFor(model => purchaseOrderProduct.Quantity)</td>
                <td class="col-sm-8">@Html.DisplayFor(model => purchaseOrderProduct.Price)</td>
                <td class="col-sm-8"><button class="delete-POP alert-danger" id="@purchaseOrderProduct.PurchaseOrderProductId">X</button></td>

            </tr>

        }
        <tr>
            <td class="col-sm-8"</td>
            <td class="col-sm-8"></td>
            <td class="col-sm-8"><h5>Total Price</h5></td>
            <td class="col-sm-8">@Model.groupedProducts.Sum(model => model.Price)</td>
        </tr>
    </tbody>
</table>

