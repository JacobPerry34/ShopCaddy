@model ShopCaddy.Controllers.PurchaseOrdersController.POPViewModel

@{
    ViewData["Title"] = "Details";
}

<h1></h1>

<div class="row flex-flow justify-content-md-center">
    <h2 style="-webkit-box-shadow: 0px 10px 13px -7px #000000, -10px 5px 19px 5px rgba(0,0,0,0.63);
box-shadow: 0px 10px 13px -7px #000000, -10px 5px 19px 5px rgba(0,0,0,0.63); border: 1px hidden #1C6EA4;
border-radius: 5px;" class="table-dark w-50 row flex-flow justify-content-md-center m-4">@Html.DisplayFor(model => model.PurchaseOrder.Name)</h2>
</div>
<div class="row flex-flow justify-content-md-center">
    <dl style="-webkit-box-shadow: 0px 10px 13px -7px #000000, -10px 5px 19px 5px rgba(0,0,0,0.63);
box-shadow: 0px 10px 13px -7px #000000, -10px 5px 19px 5px rgba(0,0,0,0.63); border: 1px hidden #1C6EA4;
border-radius: 5px;" class="table-dark flex-flow justify-content-md-center">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vendor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseOrder.Vendor.Contact)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseOrder.Vendor.PhoneNumber)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseOrder.Vendor.Email)
        </dd>
    </dl>
    <div style="-webkit-box-shadow: 0px 10px 13px -7px #000000, -10px 5px 19px 5px rgba(0,0,0,0.63);
box-shadow: 0px 10px 13px -7px #000000, -10px 5px 19px 5px rgba(0,0,0,0.63); border: 1px hidden #1C6EA4;
border-radius: 5px;" class="table-dark w-50 row flex-flow justify-content-md-center m-5">
    <table class=" table table-dark">
        <thead>
            <tr>
                <th class="col-sm-2">
                    Image
                </th>
                <th class="col-sm-2">
                    Product Name
                </th>
                <th class="col-sm-2">
                    Quantity
                </th>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Price)
                </th>
                <th class="col-sm-2">
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (ShopCaddy.Controllers.PurchaseOrdersController.POPViewModel purchaseOrderProduct in Model.groupedProducts)
            {

                <tr>
                    @*<th scope="row"></th>*@
                    <td class="col-sm-8"> <img src="@Html.DisplayFor(model => purchaseOrderProduct.Product.Image)" class="card-img h-25 w-auto" /></td>
                    <td class="col-sm-8">@Html.DisplayFor(model => purchaseOrderProduct.Product.Name)</td>

                    <td class="col-sm-8">@Html.DisplayFor(model => purchaseOrderProduct.Quantity)</td>
                    <td class="col-sm-8">@Html.DisplayFor(model => purchaseOrderProduct.Price)</td>
                    <td class="col-sm-8"><button class="delete-POP btn btn-danger" id="@purchaseOrderProduct.PurchaseOrderProductId">X</button></td>

                </tr>

            }
            <tr>
                <td class="col-sm-8"</td>
                <td class="col-sm-8"></td>
                <td class="col-sm-8"><h5>Total Price</h5></td>
                <td class="col-sm-8">@Model.groupedProducts.Sum(model => model.Price)</td>
            </tr>
        </tbody>
    </table>
    </div>
