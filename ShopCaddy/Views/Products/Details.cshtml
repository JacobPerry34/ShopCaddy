@model ShopCaddy.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model=> model.Name)</h1>

<div class="table table-dark">
    <hr />
    <dl class="col"
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.Image)" class="product-details-image" alt="Photo Did not Load" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Season)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Season)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SerialNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SerialNumber)
        </dd>
    </dl>
</div>
<div>
    @if(Model.Quantity < 5)
    {
        <p>The Number of this Product is running Low. Would you like to add this Product to a Purchase Order?</p>
        <a asp-controller="PurchaseOrderProducts" asp-action="Create" asp-route-id="@Model.Id"><button class="btn btn-danger">Add to a Purchase Order</button></a>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-danger">Edit</a>
</div>
