@model IEnumerable<ShopCaddy.Models.ProductType>

@{
    ViewData["Title"] = "Index";
}
    <div class="row flex-flow justify-content-md-center">
        <h1 style="-webkit-box-shadow: 0px 10px 13px -7px #000000, -10px 5px 19px 5px rgba(0,0,0,0.63);
box-shadow: 0px 10px 13px -7px #000000, -10px 5px 19px 5px rgba(0,0,0,0.63); border: 1px hidden #1C6EA4;
border-radius: 5px;" class="table-dark w-50 row flex-flow justify-content-md-center">
            Product Categories
        </h1>
    </div>
<div class="row flex-flow justify-content-md-center">
    <a style="-webkit-box-shadow: 0px 10px 13px -7px #000000, -10px 5px 19px 5px rgba(0,0,0,0.63); 
box-shadow: 0px 10px 13px -7px #000000, -10px 5px 19px 5px rgba(0,0,0,0.63);" asp-action="Create" class="btn btn-danger row flex-flow justify-content-md-center">Create New</a>
</div>
<div class="row flex-flow justify-content-md-center">
    @foreach (var item in Model)
    {
        <div class="card m-3" style="width: 18rem;-webkit-box-shadow: 0px 10px 13px -7px #000000, -10px 5px 19px 5px rgba(0,0,0,0.63); 
box-shadow: 0px 10px 13px -7px #000000, -10px 5px 19px 5px rgba(0,0,0,0.63); border: 1px hidden #1C6EA4;
border-radius: 5px;">
            <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.Image)" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title"><a asp-controller="Products" asp-action="Index" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a></h5>
                <p class="card-text">
                    <a style="-webkit-box-shadow: 0px 10px 13px -7px #000000, -10px 5px 19px 5px rgba(0,0,0,0.63); 
box-shadow: 0px 10px 13px -7px #000000, -10px 5px 19px 5px rgba(0,0,0,0.63);"asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger">Edit</a> |
                    <a style="-webkit-box-shadow: 0px 10px 13px -7px #000000, -10px 5px 19px 5px rgba(0,0,0,0.63); 
box-shadow: 0px 10px 13px -7px #000000, -10px 5px 19px 5px rgba(0,0,0,0.63);"asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </p>
            </div>
        </div>
    }
</div>

